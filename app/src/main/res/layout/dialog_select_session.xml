<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_backk">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Session"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/session5Min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5-Minute Session"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/session10Min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10-Minute Session"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/sessionHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check results"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
