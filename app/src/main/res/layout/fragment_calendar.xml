<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calendar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a date"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black" />

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerColor="@color/pink"
            app:selectionColor="@color/teal_200"
            app:todayLabelColor="@color/pink"
            app:disabledDaysLabelsColor="@color/gray"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/selected_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/hrv_chart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart Rate Variability Chart"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/hrv_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/average_hrv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average HRV:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/stress_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time in High Stress: 0 minutes"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/hr_chart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart Rate Chart"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/hr_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/average_hr_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average HR:"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="90dp" />

    </LinearLayout>
</ScrollView>
