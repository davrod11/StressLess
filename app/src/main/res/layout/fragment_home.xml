<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/layoutMeasurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_card_background"
            android:orientation="horizontal"
            android:padding="30dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stress Measurement"
                android:textSize="20sp"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ecg"
                android:contentDescription="Ícone de Registos ECG" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@drawable/rounded_card_back"
            android:orientation="horizontal"
            android:padding="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Ícone de Registos"
                android:src="@drawable/run" />

            <TextView
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exercises List"
                android:textSize="20sp"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutWeeklyGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_card_background"
            android:orientation="horizontal"
            android:padding="30dp"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weekly Goals"
                android:textSize="20sp"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/goal"
                android:contentDescription="Ícone de Exercícios" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRelaxation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@drawable/rounded_card_back"
            android:orientation="horizontal"
            android:padding="30dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/yoga"
            android:contentDescription="Relaxation Icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Relax Zone"
                android:textSize="20sp"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/blanccc"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="."
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/transparent"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
