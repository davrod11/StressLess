<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Light mode -->
    <style name="Base.Theme.StressLess.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">#28DFE7</item>
        <item name="colorSecondaryVariant">#216271</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/pink</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="CustomButtonStyle" parent="Theme.MaterialComponents.NoActionBar">
        <item name="backgroundTint">@color/custom_button_background</item>
        <item name="cornerRadius">16dp</item> <!-- Opcional: para bordas arredondadas -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalendarViewStyle" parent="@android:style/Widget.CalendarView">
        <item name="android:background">@color/transparent</item>
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayText</item>
        <item name="android:selectedDateVerticalBar">@drawable/calendar_date_selector</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarWeekDayText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Estilo para o texto do dia de hoje -->
    <style name="CalendarTodayText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/today_day_background</item>
    </style>
    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>
